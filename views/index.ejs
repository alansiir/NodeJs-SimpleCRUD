<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="./img/me.png" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>

    <link href="./css/bootstrap.min.css" rel="stylesheet" />

     <link rel="stylesheet" href="./css/dark-light.css">

    <!-- Custom styles for this template -->
    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
  </head>
  <body>

    <%- include('./component/dark-light-mode.ejs') %>
    

    <main class="d-flex flex-nowrap">
      <%- include('./component/sidebar.ejs' ,{page : "index"}) %>

      <section class="w-100">
         <%- include('./component/navbar.ejs') %>


         <h2 style="text-align: left; margin-left: 40px; padding-top:20px">List of Customer</h2>
           <% if (arr.length===0) { %>
               <h1 style="text-align: center; margin: 100px;">no data to show</h1>
           
            <% } else { %>

              <table
              style="width: 99%"
              class="text-center mx-auto table mt-5 table-striped table-bordered"
            >
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Full Name</th>
                  <th scope="col">Gender</th>
                  <th scope="col">Age</th>
                  <th scope="col">Country</th>      
                  <th scope="col">Telephone</th>        
                  <th scope="col">Email</th>
                  <th scope="col">Last updated</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
    
                <% arr.forEach((item , index) => { %>
                  <tr>
                    <th scope="row"><%= index + 1  %></th>
                    <td> <%= item.FirstName %> <%= item.LastName  %></td>
                    <td><%= item.Gender %></td>
                    <td> <%= item.Age %></td>
                    <td><%= item.Country %></td>
                    <td> <%= item.Telephone  %></td>
                    <td> <%= item.Email  %></td>
                    
                    
                    <td> <%= moment(item.updatedAt ).fromNow()%>  </td>
                    <td>
                      <a
                        data-bs-toggle="tooltip"
                        data-bs-title="View details"
                        data-bs-placement="top"
                        class="btn btn-primary btn-sm"
                        href="./view/<%= item._id %>"
                        ><i class="bi bi-eye"></i
                      ></a>
      
                      <a
                        data-bs-toggle="tooltip"
                        data-bs-title="Edit user"
                        data-bs-placement="top"
                        class="btn btn-primary btn-sm"
                        href="./edit/<%= item._id %>"
                      >
                        <i class="bi bi-pencil"></i>  
                      </a>
    
                      <form action="/del/<%= item._id %>?_method=DELETE" method="POST"  style="display: inline">
                        <button
                         
                          class="btn btn-danger btn-sm"
                          data-bs-toggle="tooltip"
                          data-bs-title="Delete user"
                          data-bs-placement="top">
                          <i class="bi bi-trash"></i> 
                        </button>
                      </form>
                      
                      </form>
                      
                      
                    </td> 
                  </tr>
             
                  <% }) %>
                

              </tbody>
             </table>
             
              <% } %>
             
        
   
       
        
      </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
  </body>
</html>
